{
  "name": "service-learning-management-system",
  "private": true,
  "version": "1.0.0",
  "description": "A comprehensive volunteer management platform for community service coordination",
  "keywords": [
    "volunteer",
    "management",
    "community-service",
    "react",
    "typescript",
    "supabase"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start": "vite preview",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 50",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "echo 'No tests configured'",
    "test:unit": "echo 'No unit tests configured'",
    "test:e2e": "echo 'No e2e tests configured'",
    "audit": "npm audit --audit-level moderate"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.75.0",
    "openai": "^6.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.40.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/coverage-v8": "^1.0.0",
    "babel-plugin-react-compiler": "^19.1.0-rc.3",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "jsdom": "^23.0.0",
    "prettier": "^3.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
