{
  "name": "service-learning-management-system",
  "private": true,
  "version": "1.0.0",
  "description": "A comprehensive volunteer management platform for community service coordination",
  "keywords": [
    "volunteer",
    "management",
    "community-service",
    "react",
    "typescript",
    "supabase"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite --config config/vite.config.ts",
    "build": "vite build --config config/vite.config.ts",
    "start": "vite preview --config config/vite.config.ts",
    "preview": "vite preview --config config/vite.config.ts",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 50 --config config/eslint.config.js",
    "lint:fix": "eslint . --ext ts,tsx --fix --config config/eslint.config.js",
    "type-check": "tsc --noEmit --project config/tsconfig.json",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --reporter=verbose --exclude src/**/*.integration.test.{ts,tsx}",
    "test:integration": "vitest run --reporter=verbose src/pages/DashboardPage.integration.test.tsx src/pages/LoginPage.integration.test.tsx src/components/scheduling/EventRegistrationModal.integration.test.tsx",
    "test:e2e": "playwright test tests/e2e --config config/playwright.config.ts",
    "test:acceptance": "playwright test tests/acceptance --config config/playwright.config.ts",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:acceptance",
    "test:regression": "npm run test:all",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "audit": "npm audit --audit-level moderate"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.58.0",
    "moment": "^2.30.1",
    "openai": "^6.1.0",
    "react": "^19.1.1",
    "react-big-calendar": "^1.19.4",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.13",
    "@types/react-big-calendar": "^1.16.3",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/coverage-v8": "^4.0.0",
    "babel-plugin-react-compiler": "^19.1.0-rc.3",
    "baseline-browser-mapping": "^2.8.32",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "jsdom": "^23.0.0",
    "prettier": "^3.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7",
    "vitest": "^4.0.13"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
